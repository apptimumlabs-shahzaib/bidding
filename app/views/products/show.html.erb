<p style="color: green"><%= notice %></p>

<img class="img-fluid" src="/assets/product_<%=rand(1..3)%>.jpg" alt="Card image cap" style="height:30rem;width:100%" >
<h1><%=@product.title%></h1>
<h6><%=@product.description%></h6>
  <%= link_to "Edit this product", edit_product_path(@product),class: "btn btn-outline-dark" %> 
  <%= link_to "Back to products", products_path,class: "btn btn-outline-dark"  %>
  <%= button_to "Destroy this product", @product, method: :delete,class: "btn btn-outline-danger mt-2"  %>
  <%= turbo_stream_from Bid %>
  <div id="<%= dom_id(@product)%>" class="mt-3" >
  <%Bid.where(product_id:@product.id).each do |c|%>
    <div >
    <div class="card mb-2 p-2 mr-4" style="background-color:#E0FFFF" >
    <div class="row no-gutters">
    <div class="col-md-1 ml-3">
    <br/>
    <img src="/assets/user_avatars/user_<%=rand(1..10)%>.svg" class="rounded-circle z-depth-0" alt="avatar image" style="width:98px;">
    </div >
    <div class="col-md-10" >
    <div class="card-body">
        <h5 class="card-title"><%= c.user.first_name%> <%= c.user.last_name%> </h5>
        <p class="card-subtitle"> <%= c.rate %> </p>
    </div>
    </div>
    </div>
    </div>
  <%end%>
</div>

