
<div class="col-md-4">
    <div class="card mt-5 ml-5" style="width: 19rem;">
    <div class="shadow bg-white rounded">
    <div class="mt-3 text-center">
    <img class="card-img-top" src="/assets/product_<%=rand(1..3)%>.jpg" alt="Card image cap" style="width:100%;">
    </div>
    <div class="card-body">
        <h5 class="card-title"> <%=product.title%></h5>
        <p class="card-text"><%=product.description%></p>
      <%= link_to "VIEW", product ,:class=>"btn btn-outline-primary"%>
      <%= link_to "BID", new_bid_path(product) ,:class=>"btn btn-outline-primary"%>
    </div>
    </div>
    </div>
</div>